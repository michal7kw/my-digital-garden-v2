---
permalink: "{{ page.filePathStem | replace('/notes/', '/') | slugify }}/"
---
<!DOCTYPE html>
<html lang="{{ meta.mainLanguage }}">
  <head>
    <title>{% if title %}{{ title }}{% else %}{{ page.fileSlug }}{% endif %}</title>
    {%include "components/pageheader.njk"%}
    {% for imp in dynamics.common.head %}
      {% include imp %}
    {% endfor %}
    {% for imp in dynamics.notes.head %}
      {% include imp %}
    {% endfor %}
  </head>
  <body class="theme-{{meta.baseTheme}} markdown-preview-view markdown-rendered markdown-preview-section {{meta.bodyClasses}}">
    {%include "components/notegrowthhistory.njk"%}
    {%include "components/navbar.njk"%}

    {% if settings.dgShowFileTree === true %}
      {%include "components/filetree.njk"%}
    {% endif %}

    {% if settings.dgEnableSearch === true %}
      {%include "components/searchContainer.njk"%}
    {% endif %}

    <main class="content cm-s-obsidian diagram-page">
      <header>
        <h1 data-note-icon="{% if noteIcon %}{{noteIcon}}{% else %}diagram{% endif %}">
          {% if title %}{{ title }}{% else %}{{ page.fileSlug }}{% endif %}
        </h1>

        {# Diagram type badge #}
        <div class="entity-header-badge">
          <span class="entity-badge entity-badge-diagram">
            <span class="badge-icon">üìä</span>
            <span class="badge-label">Diagram</span>
          </span>
        </div>

        {% if description %}
          <p class="diagram-description">{{ description }}</p>
        {% endif %}

        <div class="header-meta">
          {% if settings.dgShowTags === true and tags %}
            <div class="header-tags">
              {% for tag in tags %}
                {% if tag != 'gardenEntry' and tag != 'note' and tag != 'diagram' %}
                  <a class="tag" onclick="toggleTagSearch(this)">
                    #{{tag}}
                  </a>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
          {%- if meta.timestampSettings.showCreated or meta.timestampSettings.showUpdated -%}
          <div class="timestamps">
            {%- if meta.timestampSettings.showCreated and created -%}
            <div><i icon-name="calendar-plus"></i> <span class="human-date" data-date="{{created}}"></span></div>
            {%- endif -%}
            {%- if meta.timestampSettings.showUpdated and updated -%}
            <div><i icon-name="calendar-clock"></i> <span class="human-date" data-date="{{updated}}"></span></div>
            {%- endif -%}
          </div>
          {%- endif -%}
        </div>

        {% for imp in dynamics.common.header %}
          {% include imp %}
        {% endfor %}
        {% for imp in dynamics.notes.header %}
          {% include imp %}
        {% endfor %}
      </header>

      {% for imp in dynamics.common.beforeContent %}
        {% include imp %}
      {% endfor %}
      {% for imp in dynamics.notes.beforeContent %}
        {% include imp %}
      {% endfor %}

      {# Main diagram container - full width #}
      <div class="excalidraw-fullpage">
        <div class="excalidraw-svg">
          {% if svgContent %}
            {{ svgContent | safe }}
          {% else %}
            <div class="diagram-loading-error">
              <p>‚ö†Ô∏è Unable to load diagram SVG.</p>
              <p>Make sure SVG auto-export is enabled in Excalidraw plugin settings.</p>
            </div>
          {% endif %}
        </div>
      </div>

      {# Additional content below the diagram #}
      {% if page.content and page.content | length > 100 %}
        <div class="diagram-additional-content">
          {{ page.content | hideDataview | taggify | link | safe }}
        </div>
      {% endif %}

      {% for imp in dynamics.common.afterContent %}
        {% include imp %}
      {% endfor %}
      {% for imp in dynamics.notes.afterContent %}
        {% include imp %}
      {% endfor %}

      {# Diagram metadata footer #}
      <footer class="diagram-meta">
        {%- if meta.timestampSettings.showUpdated and updated -%}
          <p>Last updated: <span class="human-date" data-date="{{updated}}"></span></p>
        {%- endif -%}

        {# Backlinks section #}
        {% if backlinks and backlinks.length > 0 %}
          <nav class="diagram-backlinks">
            <h2>Referenced in</h2>
            <ul>
              {% for link in backlinks %}
                <li>
                  <a href="{{ link.url }}" class="internal-link">
                    <i icon-name="file-text"></i>
                    {{ link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        {% endif %}
      </footer>
    </main>

    {% if settings.dgShowBacklinks === true or settings.dgShowLocalGraph === true or settings.dgShowToc === true %}
      {%include "components/sidebar.njk"%}
    {% endif %}

    {% if settings.dgLinkPreview === true %}
      {%include "components/linkPreview.njk"%}
    {% endif %}

    {% include "components/references.njk" %}
    {% include "components/timestamps.njk" %}

    {% for imp in dynamics.common.footer %}
      {% include imp %}
    {% endfor %}
    {% for imp in dynamics.notes.footer %}
      {% include imp %}
    {% endfor %}

    {# Excalidraw interactivity script #}
    {%include "components/excalidrawScript.njk"%}
    {%include "components/lucideIcons.njk"%}
  </body>
</html>
